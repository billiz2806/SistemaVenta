@model SistemaVenta.AplicacionWeb.Models.DTOs.PDFVentaDTO;
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImprimirVenta</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
            color: #ffffff;
        }

        p.title2 {
            font-weight: bold;
            color: #FFBD00;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #FAFAFA;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbproductos {
            border-collapse: separate;
            border-spacing: 4px;
        }

            table.tbproductos thead tr th {
                background-color: #FFBD00;
                padding: 10px;
                font-size: 15px;
                color: white;
            }

            table.tbproductos tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #FFDF84;
            color: #80734C;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }
    </style>
</head>
<body>
    <div class="contenedor">

        <table style="width:100%">
            <tr style="background-color:#1F1D31 ">
                <td>
                    <img src="@Model.Negocio.UrlLogo" style="width: auto;height:90px; margin:10px" />
                </td>
                <td style="text-align:right ; padding-right:20px">
                    <table width="100%">
                        <tr>
                            <td>
                                <p class="title">@Model.Negocio.Nombre.ToUpper()</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text">Direccion: @Model.Negocio.Direccion</p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">Correo: @Model.Negocio.Correo</p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <table style="width:100%">
            <tr>
                <td>
                    <table style="margin-right:auto;margin-left:0">
                        <tr>
                            <td><p class="title2">CLIENTE</p></td>
                        </tr>
                        <tr>
                            <td><p class="">@Model.Venta.NombreCliente</p></td>
                        </tr>
                        <tr>
                            <td><p class="">@Model.Venta.DocumentoCliente</p></td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">NÚMERO VENTA</p></td></tr>
                        <tr><td>@Model.Venta.NumeroVenta</td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth bg-warning">Producto</th>
                    <th class="tbth" style="width:130px">Cantidad</th>
                    <th class="tbth" style="width:130px">Precio</th>
                    <th class="tbth" style="width:130px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Venta.DetalleVenta)
                    {
                                    <tr>
                                        <td class="td-item"><p class="item">@item.DescripcionProducto</p></td>
                                        <td class="td-item"><p class="item">@item.Cantidad</p></td>
                                        <td class="td-item"><p class="item">@Model.Negocio.SimboloMoneda @item.Precio</p></td>
                                        <td style="background-color:#EDF6F9"><p class="item">@Model.Negocio.SimboloMoneda @item.Total</p></td>
                                    </tr>

                    }
                }
                <tr>
                    <td colspan="2" rowspan="3">
                    </td>
                    <td class="td-item ">
                        <p class="item-2">Sub Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.Negocio.SimboloMoneda @Model.Venta.SubTotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="td-item">
                        <p class="item-2">IGV</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.Negocio.SimboloMoneda @Model.Venta.ImpuestoTotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="item-3">
                        <p>Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.Negocio.SimboloMoneda @Model.Venta.Total</p>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

</body>
</html>

